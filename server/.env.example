# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (for production)
# Example: ALLOWED_ORIGINS=https://app.example.com,https://www.example.com
# In development, all origins are allowed by default
ALLOWED_ORIGINS=http://localhost:5173

# Optional: API Key Authentication
# If set, clients must include this key in the X-API-Key header
# Leave empty/commented to allow open access (protected only by CORS)
# SERVER_API_KEY=your_secret_api_key_here

# Rate Limiting (defaults shown, customize as needed)
# RATE_LIMIT_GENERAL=100    # requests per minute for general endpoints
# RATE_LIMIT_AI=20          # requests per minute for AI endpoints
# RATE_LIMIT_AGENTIC=5      # requests per minute for agentic endpoints

# Python Server Proxy (Phase 4)
# Enable to proxy certain routes to the Python/LangGraph backend
# ENABLE_PYTHON_PROXY=true
# PYTHON_SERVER_URL=http://localhost:8001

# Shadow Testing Configuration
# Enable shadow testing to compare Express responses with Python backend
# Useful for validating Python implementation before switching traffic
# SHADOW_TEST_ENABLED=false
# SHADOW_TEST_SAMPLE_RATE=0.1          # 0-1, percentage of requests to shadow test
# SHADOW_TEST_TIMEOUT=30000            # Timeout in milliseconds for Python requests

# Mock AI Configuration
# Enable mock AI endpoints for UI testing without calling real AI APIs
MOCK_AI_ENABLED=true
